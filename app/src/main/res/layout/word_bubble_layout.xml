<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    tools:viewBindingIgnore="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/word_bubble_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/word_bubble_container_background"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.AppCompatToggleButton
        android:id="@+id/word_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Text"
        android:textOff="Text"
        android:checked="false"
        android:textColor="#ffffff"
        android:background="@drawable/word_bubble_unselected"
        android:autoSizeMinTextSize="13sp"
        android:autoSizeMaxTextSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>