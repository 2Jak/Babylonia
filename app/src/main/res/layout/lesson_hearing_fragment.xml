<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    tools:viewBindingIgnore="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lesson_hearing_command_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/lesson_hearing_command"
        android:textSize="@dimen/user_name"
        android:textColor="@color/gold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/lesson_hearing_hear_button"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/lesson_hearing_command_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lesson_hearing_hear_slowly_button"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/lesson_hearing_hear_slowly_button"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="39dp"
        app:layout_constraintTop_toBottomOf="@id/lesson_hearing_command_textview"
        app:layout_constraintStart_toEndOf="@id/lesson_hearing_hear_button"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/lesson_hearing_translation_textedit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:minLines="1"
        android:maxLines="15"
        android:gravity="top"
        android:padding="10dp"
        android:inputType="textMultiLine"
        android:textColor="@color/gold"
        android:background="@drawable/diaglog_box_full_background"
        app:layout_constraintTop_toBottomOf="@id/lesson_hearing_hear_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>